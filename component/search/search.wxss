/* pages/search/search.wxss */
@import '../../iconfont.wxss';

.search {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.search-c {
    height: 200rpx;
    width: 450rpx;
    padding-bottom: 80rpx;
}

.sinput {
    margin-bottom: 40rpx;
    height: 60rpx;
    width: 400rpx;
    display: flex;
    line-height: 60rpx;
    border: 1rpx solid #e2e2e2;
    border-radius: 30rpx;
}

.weui-input {
    line-height: 60rpx;
    height: 60rpx;
    font-size: 30rpx;
    color: #333;
}

.phClass {
    font-size: 20rpx;
    line-height: 60rpx;
    color: #777;
}

.icons {
    margin-left: 16rpx;
    margin-right: 8rpx;
    font-size: 30rpx;
}

.foucs {
    border-color: #66AFE9;
    box-shadow: 0 1rpx 1rpx rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(102, 175, 233, 0.6);
    outline: 0 none;
}