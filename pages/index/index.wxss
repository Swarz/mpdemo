/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  overflow: scroll
}

.bottom {
  flex: 0;
}

.tab-bar {
  display: flex;
  height: 100rpx;
  align-items: flex-end;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
}

.icons {
  font-size: 50rpx;
}

.icon-text {
  font-size: 30rpx;
}